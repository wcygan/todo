{
  "tasks": {
    "setup-k8s": "deno run --allow-run --allow-env scripts/setup-minikube.ts",
    "up": "tilt up",
    "down": "tilt down",
    "dev": "tilt up",
    "local-dev": "deno task local:backend & deno task local:frontend & wait",
    "local:backend": "cd backend && air",
    "local:frontend": "cd frontend && BACKEND_URL=http://localhost:8080 bun dev",
    "local:stop": "pkill -f 'air' && pkill -f 'bun dev'"
  },
  "imports": {
    "@std/": "https://deno.land/std@0.224.0/",
    "@david/dax": "jsr:@david/dax@0.42.0"
  }
}
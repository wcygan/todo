{
  "server": {
    "port": 8080,
    "read_timeout": "30s",
    "write_timeout": "30s",
    "idle_timeout": "60s",
    "shutdown_timeout": "15s",
    "cors": {
      "allowed_origins": ["https://yourdomain.com"],
      "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowed_headers": ["Content-Type", "Connect-Protocol-Version", "Connect-Timeout-Ms"]
    }
  },
  "logger": {
    "level": "info",
    "format": "json"
  }
}